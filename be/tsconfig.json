{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node", // Critical for resolving types
    "types": ["node"], // Explicitly include Node types
    "resolveJsonModule": true
  },
  "include": ["src/**/*"], // Explicitly include source files
  "exclude": ["node_modules"]
}
